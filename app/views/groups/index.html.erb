<div id="groups-section">
<ul class="group-container">
<% @groups.each do |group| %>
  <li>
    <div class="group-image">
      <img src="<%= group.icon %>">
    </div>
      <h3><%= link_to group.name, group_path(group.id) %></h3>
      <% @total2.each do |key, value| %> 
        <% if key == group.id %> 
          <p><%= value %></p>
        <% end %> 
      <% end %>
  </li>
  <% end %> 
</ul>
