<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="login-nav">
  <div class="login-form">
    <%= link_to '<', root_path %>
    <h2>SIGN UP</h2>
    <%= f.submit "Sign Up" %>
  </div>
  </div>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field f-1">

  <%= f.text_field :name, autofocus: true, autocomplete: "email", placeholder: "Full Name" %>
</div>

  <div class="field f-1">
  
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email" %>
  </div>

  <div class="field f-1">
    
    <% if @minimum_password_length %>
   
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password" %>
  </div>

  <div class="field f-1">
  
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm Password" %>
  </div>
<% end %>


